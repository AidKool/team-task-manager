{{>headerNav}}
<section class='hero m-auto is-large'>
  <div class='container'>
    <div class='p-3 has-background-info-dark'>
      <div class="columns">
        <div class="column">
          <div class='card m-1'>
            <div class="card-content">
              <h1 class='box title has-text-white has-text-centered has-background-info-dark '>Manage Teams</h1>

              <div class='columns'>
                <form class="create-team">
                  <div class='column'>
                    <div class="mb-5">
                      <span class='has-background-warning py-3 px-3'>Create a new Team</span>
                    </div>

                    <div class='field'>
                      <div class='control'>
                        <input class='input team-name' type='text' placeholder='Team Name' required />
                      </div>
                    </div>
                    <p class="create-team-success is-size-7 has-text-success mb-3 is-hidden">Team created successfully.
                    </p>
                    <div class='field'>
                      <button type="submit" class='button is-primary'>Create Team</button>
                    </div>
                  </div>
                </form>
              </div>
              <div class='columns'>
                <div class='column'>
                  <form class="assign-employee-team">
                    <div class="mb-4">
                      <span class='has-background-warning py-3 px-3'>Assign Employees to a Team</span>
                    </div>
                    <div class="field">
                      <label for="select-team">Select a Team</label>
                      <div class="control mb-0">
                        <div class="select">
                          <select class="select-team" id="select-team">
                            <option disabled selected value="/">Select a Team</option>
                            {{#each teams as |team|}}
                            <option data-id={{team.id}} value='/teams/{{team.id}}'>{{team.name}}</option>
                            {{/each}}
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="field">
                      <label for="select-employee">Select an Employee</label>
                      <div class="control mb-0">
                        <div class="select">
                          <select class="select-employee" id="select-employee">
                            <option disabled selected value="/">Select an Employee</option>
                            {{#each users as |user|}}
                            <option data-id="{{user.id}}" value='/users/{{user.id}}'>{{user.first_name}}
                              {{user.last_name}}</option>
                            {{/each}}
                          </select>
                        </div>
                      </div>
                    </div>
                    <p class="add-employee-success is-size-7 has-text-success mb-3 is-hidden">Employee added
                      successfully.</p>
                    <div class='field'>
                      <button type="submit" class='button is-primary'>Add Employee</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="/js/createTeam.js"></script>