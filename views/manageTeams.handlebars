{{>headerNav}}
<section class='hero m-auto is-large'>
  <div class='container is-fluid columns is-centered '>
    <div class='card is-flex is-justify-content-space-evenly p-5 has-background-info-dark'>
      <div class="columns is-desktop">
        <div class="column is-8">
          <div class='card m-1'>
            <div class="card-content">
              <h1 class='box title is-3 has-text-white has-text-centered has-background-info-dark '>Manage Teams</h1>

              <div class='columns'>
                <form class="create-team">
                  <div class='column is-12'>
                    <div class="mb-5">
                      <span class='has-background-warning py-3 px-3'>Create a new Team</span>
                    </div>

                    <div class='field'>
                      <div class='control'>
                        <input class='input team-name' type='text' placeholder='Team Name' required />
                      </div>
                    </div>
                    <p class="create-team-success is-size-7 has-text-success mb-3 is-hidden">Team created successfully.
                    </p>
                    <div class='field'>
                      <button type="submit" class='button is-primary'>Create Team</button>
                    </div>
                  </div>
                </form>
              </div>
              <div class='columns'>
                <form class="assign-employee-team">
                  <div class='column is-12'>
                    <div class="mb-4">
                      <span class='has-background-warning py-3 px-3'>Assign Employees to a Team</span>
                    </div>
                    <div class="field">
                      <label for="">Select a Team</label>
                      <div class="control mb-0">
                        <div class="select">
                          <select class="select-team">
                            <option disabled selected value="/">Select a Team</option>
                            {{#each teams as |team|}}
                            <option data-id={{team.id}} value='/teams/{{team.id}}'>{{team.name}}</option>
                            {{/each}}
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="field">
                      <label for="">Select an Employee</label>
                      <div class="control mb-0">
                        <div class="select">
                          <select class="select-employee">
                            <option disabled selected value="/">Select an Employee</option>
                            {{#each users as |user|}}
                            <option data-id="{{user.id}}" value='/users/{{user.id}}'>{{user.first_name}}
                              {{user.last_name}}</option>
                            {{/each}}
                          </select>
                        </div>
                      </div>
                    </div>
                    <p class="add-employee-success is-size-7 has-text-success mb-3 is-hidden">Employee added
                      successfully.</p>
                    <div class='field'>
                      <button type="submit" class='button is-primary'>Add Employee</button>
                    </div>
                  </div>
                </form>
              </div>
              {{!-- <div class="control mt-0">
                <input class="input" type="text" value="employee role here" Employee Role>
              </div> --}}
            </div>
          </div>
        </div>

        <div class="columns is-desktop mt-0">
          <div class="column ">
            <div class='card m-1'>
              <div class="card-content">
                <h1 class='box title is-3 has-text-white has-text-centered has-background-info-dark'>Team Members</h1>
                <div class="container ">
                  <div class="box has-background-warning">

                    <div class="box ">
                      {{!-- added users --}}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
<script src="/js/createTeam.js"></script>