{{>headerNav}}
 <section class='hero m-auto is-large '>
    <div class='container is-fluid columns is-centered'>
      <div class='is-flex is-justify-content-space-evenly p-5 has-background-dark'>
        <div class="columns is-desktop">
          <div class="tile is-ancestor">
            <div class="tile is-8 is-vertical is-parent">
              <div class="tile is-child box">
                <div class="columns">
                  <div class="column is-align-items-center">
                    <article
                      class="tile is-12 is-child notification is-primary is-flex is-flex-direction-column is-align-items-center">
                      <span class="iconify-inline icon is-large" data-icon="wpf:create-new"></span>
                      <a class="subtitle" onclick="openModalProj()">Create Project</a>
                    </article>
                  </div>
                  <div class="column">
                    <article
                      class="tile is-12 is-child notification is-primary is-flex is-flex-direction-column is-align-items-center">
                      <span class="iconify-inline icon is-large" data-icon="fluent:people-team-add-24-regular"></span>
                      <a class="subtitle">Create Team</a>
                    </article>
                  </div>
                  <div class="column">
                    <article
                      class="tile is-12 is-child notification is-primary is-flex is-flex-direction-column is-align-items-center ">
                      <span class="iconify-inline icon is-large js-modal-trigger"
                        data-icon="fluent:clipboard-task-list-ltr-24-regular" data-target="modal-js-example"></span>
                      <a class="subtitle" onclick="openModalTask()">Create Task</a>
                    </article>
                  </div>
                </div>
                <div class="columns">
                  <div class="column">
                    <article class="tile is-12 is-child notification is-primary ">
                      <div class="field ">
                        <label class="label">Select a Project</label>
                        <div class="control">
                          <span class="iconify-inline icon is-large" data-icon="icons8:parallel-tasks"></span>
                          <div class="select">
                            <select>
                              <option>Select dropdown</option>
                              <option>With options</option>
                            </select>
                          </div>
                        </div>
                      </div>
                    </article>
                  </div>
                  <div class="column ">
                    <article class="tile is-12 is-child notification is-primary">
                      <div class="field ">
                        <label class="label">Select a Team</label>
                        <div class="control ">
                          <span class="iconify-inline icon is-large" data-icon="fluent:people-team-28-regular"></span>
                          <div class="select ">
                            <select>
                              <option>Select dropdown</option>
                              <option>With options</option>
                            </select>
                          </div>
                        </div>
                      </div>
                    </article>
                  </div>
                </div>
              </div>
            </div>
            <div class="tile is-parent">
              <div class="tile is-child box">
                <div class="card">
                  <div class="card-image">
                    <figure class="image is-4by3">
                      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                  </div>
                  <div class="card-content ">
                    <div class="media-content has-text-centered">
                      <p class="title is-4 has-text-black">John Smith</p>
                      <p class="subtitle is-6 has-text-black">@johnsmith</p>
                      <h1 class='box title is-2 has-background-link  '>Manager Dashboard</h1>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
